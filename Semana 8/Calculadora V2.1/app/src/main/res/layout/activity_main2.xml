<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bfc9e1"
    android:backgroundTint="#BFC9E1"
    tools:context=".MainActivity2">

    <Button
        android:id="@+id/backb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:layout_weight="1"
        android:backgroundTint="#93a1bf "
        android:text="←"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="100sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="334dp"
        android:layout_height="435dp"
        android:layout_marginTop="258dp"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#93a1bf "
                android:text="7"
                android:textColor="#FFFFFF"
                android:textSize="50sp"
                app:cornerRadius="100sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#93a1bf "
                android:text="8"
                android:textColor="#FFFFFF"
                android:textSize="50sp"
                app:cornerRadius="100sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#93a1bf "
                android:text="9"
                android:textColor="#FFFFFF"
                android:textSize="50sp"
                app:cornerRadius="100sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#93a1bf "
                android:text="4"
                android:textColor="#FFFFFF"
                android:textSize="50sp"
                app:cornerRadius="100sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#93a1bf "
                android:text="5"
                android:textColor="#FFFFFF"
                android:textSize="50sp"
                app:cornerRadius="100sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#93a1bf "
                android:text="6"
                android:textColor="#FFFFFF"
                android:textSize="50sp"
                app:cornerRadius="100sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#93a1bf "
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="50sp"
                app:cornerRadius="100sp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#93a1bf "
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="50sp"
                app:cornerRadius="100sp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#93a1bf "
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="50sp"
                app:cornerRadius="100sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#93a1bf "
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                app:cornerRadius="100sp" />

            <Button
                android:id="@+id/button11"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#93a1bf "
                android:onClick="BorrarTodo"
                android:text="C"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                app:cornerRadius="100sp" />

            <Button
                android:id="@+id/button12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#93a1bf "
                android:onClick="BorrarUno"
                android:text="--"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                app:cornerRadius="100sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#93a1bf "
                android:onClick="factorial"
                android:text="Calcular"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                app:cornerRadius="100sp" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/FactoCalc"
        android:layout_width="334dp"
        android:layout_height="79dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="121dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="57dp"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:textSize="60sp"
        app:circularflow_defaultRadius="50sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>